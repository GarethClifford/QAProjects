package com.qa.Goldilock;

public class Goldilocks {

	private static int mass;
	private static int fortitude;

	public Goldilocks(int mass, int fortitude) {
		this.mass = mass;
		this.fortitude = fortitude;
	}

	public static boolean canSit(Chair chair) {
		return (this.mass < Chair.getCapacity() && this.fortitude > Chair.getTemp());
	}

}
