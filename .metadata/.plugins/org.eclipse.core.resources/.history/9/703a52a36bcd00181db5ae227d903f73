
public class Calculator {

	public static void calculate(double x, double y, double z) {
		if (x * y == z) {
			System.out.println(x + "*" + String.valueOf(y) + "=" + String.valueOf(z));
		}
		if (x + y == z) {
			System.out.println(String.valueOf(x) + "+" + String.valueOf(y) + "=" + String.valueOf(z));
		}
		if (x - y == z) {
			System.out.println(String.valueOf(x) + "-" + String.valueOf(y) + "=" + String.valueOf(z));
		}
		if (x / y == z) {
			System.out.println(String.valueOf(x) + "/" + String.valueOf(y) + "=" + String.valueOf(z));
		}
	}

	public static void calculator(int x, int y, int z) {
		calculate(x, y, z);
		calculate(x, z, y);
		calculate(y, z, x);
		calculate(y, x, z);
		calculate(z, x, y);
		calculate(z, y, x);

	}

	public static void calculator(int w, int x, int y, int z) {
		calculator(x, y, z);
		calculator(y, z, w);
		calculator(z, w, x);
		calculator(w, x, y);
	}

}
