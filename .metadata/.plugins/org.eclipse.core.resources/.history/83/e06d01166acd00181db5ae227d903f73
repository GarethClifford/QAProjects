
public class Calculator {

	public void calculate(int x, int y, int z) {
		if (x * y == z) {
			System.out.println(Integer.toString(x) + "*" + Integer.toString(y) + "=" + Integer.toString(z));
		}
		if (x + y == z) {
			System.out.println(Integer.toString(x) + "+" + Integer.toString(y) + "=" + Integer.toString(z));
		}
		if (x - y == z) {
			System.out.println(Integer.toString(x) + "-" + Integer.toString(y) + "=" + Integer.toString(z));
		}
		if (x / y == z) {
			System.out.println(Integer.toString(x) + "/" + Integer.toString(y) + "=" + Integer.toString(z));
		}
	}

	public void calculator(int x, int y, int z) {
		calculate(x, y, z);
		calculate(x, z, y);
		calculate(y, z, x);
		calculate(y, x, z);
		calculate(z, x, y);
		calculate(z, y, x);
		System.out.println("---");
	}

}
