package com.qa.Blackjack;

import static org.junit.Assert.assertEquals;

import org.junit.Test;

public class BlackjackTest {

	@Test
	public void testBlackjack() {

		Runner players = new Runner();

		assertEquals(10, players.playTime(10, 5));

	}

	@Test
	public void testBlackjack2() {

		Runner players = new Runner();

		assertEquals(10, players.playTime(6, 10));

	}

	@Test
	public void testBlackjack3() {

		Runner players = new Runner();

		assertEquals(0, players.playTime(25, 22));

	}
	
	@Test
	public void testBlackjack4() {

		Runner players = new Runner();

		assertEquals(20, players.playTime(20, 22));

	}
}